@model IEnumerable<Location>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Location Table</h4>
                    <p class="card-description">
                        <a asp-controller="Location" asp-action="create" class="btn btn-outline-success">Create Location</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Icon</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var location in Model)
                                {
                                    <tr>

                                        <td>@location.Title</td>
                                        <td>@location.Description</td>
                                        <td>@location.Icon</td>
                                        <td>
                                            <a asp-action="update" asp-route-id="@location.Id" class="btn btn-outline-info"><i class="ni ni-ruler-pencil"></i></a>
                                            <a asp-action="delete" asp-route-id="@location.Id" class="btn btn-outline-secondary"><i class="ni ni-fat-remove"></i></a>
                                            <a asp-action="detail" asp-route-id="@location.Id" class="btn btn-outline-behance"><i class="ni ni-settings-gear-65"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

