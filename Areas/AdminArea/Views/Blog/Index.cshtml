@model IEnumerable<Blog>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Table</h4>
                    <p class="card-description">
                        <a asp-controller="blog" asp-action="create" class="btn btn-outline-success">Create Blog</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Author</th>
                                    <th>CreatedDate</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var blog in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="200" height="100" src="~/img/blog/@blog.ImageUrl" alt="" />
                                        </td>
                                        <td>@blog.ShortTitle</td>
                                        <td>@blog.ShortDesc</td>
                                        <td>@blog.Author</td>
                                        <td>@blog.CreatedDate</td>
                                        <td>
                                            <a asp-action="update" asp-route-id="@blog.Id" class="btn btn-outline-info"><i class="ni ni-ruler-pencil"></i></a>
                                            <a asp-action="delete" asp-route-id="@blog.Id" class="btn btn-outline-secondary"><i class="ni ni-fat-remove"></i></a>
                                            <a asp-action="detail" asp-route-id="@blog.Id" class="btn btn-outline-behance"><i class="ni ni-settings-gear-65"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
