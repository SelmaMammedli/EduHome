
@model BlogCreateVM
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Create Form</h4>
                    <p class="card-description">
                        <a class="btn btn-outline-dark" asp-action="index">Go Back  </a>
                    </p>
                    <form enctype="multipart/form-data" class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Name</label>
                            <input asp-for="Title" class="form-control" placeholder="Name">
                            <span asp-validation-for="Title" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Description</label>
                            <textarea asp-for="Description" cols="23" rows="9"></textarea>
                            <span asp-validation-for="Description" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Author</label>
                            <input asp-for="Author" cols="23" rows="9">
                            <span asp-validation-for="Author" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Date</label>
                            <input asp-for="CreatedDate" cols="23" rows="9">
                            <span asp-validation-for="CreatedDate" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1"></label>
                            <input asp-for="Photo" />
                            <span asp-validation-for="Photo" style="color:darkred"></span>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Submit</button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts{

    @*@await Html.PartialAsync("_ValidationPartial");*@
    <partial name="_ValidationPartial"></partial>

}

