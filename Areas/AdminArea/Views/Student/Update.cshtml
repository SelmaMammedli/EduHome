@model StudentUpdateVM
@{
    var categories = (List<Category>)ViewBag.Category;

}
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Student Update Form</h4>
                    <p class="card-description">
                        <a class="btn btn-outline-dark" asp-action="index">Go Back  </a>
                    </p>
                    <form enctype="multipart/form-data" class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="FullName">Full Name</label>
                            <input asp-for="FullName" class="form-control" placeholder="FullName">
                            <span asp-validation-for="FullName" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="About">About </label>
                            <textarea asp-for="About" cols="23" rows="9"></textarea>
                            <span asp-validation-for="About" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone">Phone</label>
                            <input asp-for="Phone" class="form-control" placeholder="Phone number">
                            <span asp-validation-for="Phone" style="color:darkred"></span>
                        </div>


                        <select asp-for="CategoryId" class="form-select" aria-label="Default select example">
                            @foreach (var category in categories)
                            {
                                <option value="@category.Id">@category.Title</option>

                            }

                        </select><br />
                        <p>
                            <img width="400" height="200" src="~/img/teacher/@Model.ImageUrl" alt="" />
                        </p>

                        <div class="form-group">
                            <label asp-for="Photos"></label>
                            <input asp-for="Photos" />
                            <span asp-validation-for="Photos" style="color:darkred"></span>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Submit</button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts{

    @*@await Html.PartialAsync("_ValidationPartial");*@
    <partial name="_ValidationPartial"></partial>

}
