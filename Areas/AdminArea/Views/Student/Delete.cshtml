@model Student
<hr />
<div class="container ">
    <div class="raw">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <p>
                        <img width="400" height="200" src="~/img/teacher/@Model.ImageUrl" alt="" />
                    </p>
                    Student FullName: <b style="color red">@Model.FullName</b><hr />
                    About  : <i>@Model.About</i><hr />
                    Phone: <i>@Model.Phone</i><hr />
                    Email: <i>@Model.Email</i><hr />
                   
                    Category of course: <i>@Model.Category.Title</i><hr />


                    <a class="btn btn-outline-dark" asp-action="index">Go Back</a>
                    <a class="btn btn-outline-danger" asp-action="DeleteStudent" asp-route-id="@Model.Id">Delete</a>
                </div>


            </div>

        </div>

    </div>

</div>