@model IEnumerable<Student>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Student Table</h4>
                    <p class="card-description">
                        <a asp-controller="student" asp-action="create" class="btn btn-outline-success">Create Student</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>FullName</th>
                                    <th>About</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Course</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="200" height="100" src="~/img/teacher/@course.ImageUrl" alt="" />
                                        </td>
                                        <td>@course.FullName</td>
                                        <td>@course.ShortAbout</td>
                                        <td>@course.Email</td>
                                        <td>@course.Phone</td>
                                        <td>@course.Category.Title</td>
                                        
                                        <td>
                                            <a asp-action="update" asp-route-id="@course.Id" class="btn btn-outline-info"><i class="ni ni-ruler-pencil"></i></a>
                                            <a asp-action="delete" asp-route-id="@course.Id" class="btn btn-outline-secondary"><i class="ni ni-fat-remove"></i></a>
                                            <a asp-action="detail" asp-route-id="@course.Id" class="btn btn-outline-behance"><i class="ni ni-settings-gear-65"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
