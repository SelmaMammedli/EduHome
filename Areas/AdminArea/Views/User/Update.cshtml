@model UserUpdateVM
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> User Update Form</h4>
                    <p class="card-description">
                        <a class="btn btn-outline-dark" asp-action="index">Go Back  </a>
                    </p>
                    <form enctype="multipart/form-data" class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="FullName">FullName</label>
                            <input asp-for="FullName" class="form-control" placeholder="Fullname">
                            <span asp-validation-for="FullName" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName">UserName</label>
                            <input asp-for="UserName" class="form-control" placeholder="Username">
                            <span asp-validation-for="UserName" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" style="color:darkred"></span>
                        </div>
                        



                        <button type="submit" class="btn btn-primary me-2">Submit</button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts{

    @*@await Html.PartialAsync("_ValidationPartial");*@
    <partial name="_ValidationPartial"></partial>

}
