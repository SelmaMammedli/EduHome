@model TeacherUpdateVM
@{
    var categories = (List<Category>)ViewBag.Category;
    var licenses = (List<License>)ViewBag.License;
}
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Teacher Update Form</h4>
                    <p class="card-description">
                        <a class="btn btn-outline-dark" asp-action="index">Go Back  </a>
                    </p>
                    <form enctype="multipart/form-data" class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="FullName">FullName</label>
                            <input asp-for="FullName" class="form-control" placeholder="FullName">
                            <span asp-validation-for="FullName" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AboutMe">AboutMe</label>
                            <textarea asp-for="AboutMe" cols="23" rows="9"></textarea>
                            <span asp-validation-for="AboutMe" style="color:darkred"></span>
                        </div>
                        <select asp-for="LicenseId" class="form-select" aria-label="Default select example">

                            @foreach (var license in licenses)
                            {
                                <option value="@license.Id">@license.Title</option>

                            }

                        </select><br />
                        <select asp-for="CategoryId" class="form-select" aria-label="Default select example">
                            @foreach (var category in categories)
                            {
                                <option value="@category.Id">@category.Title</option>

                            }

                        </select><br />

                        <div class="form-group">
                            <label asp-for="Experience">Experience</label>
                            <input asp-for="Experience" class="form-control" placeholder="Experience">
                            <span asp-validation-for="Experience" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Hobbies">Hobbies</label>
                            <input asp-for="Hobbies" class="form-control" placeholder="Hobbies">
                            <span asp-validation-for="Hobbies" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Faculty">Faculty</label>
                            <input asp-for="Faculty" class="form-control" placeholder="Faculty">
                            <span asp-validation-for="Faculty" style="color:darkred"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Degree">Degree</label>
                            <input asp-for="Degree" class="form-control" placeholder="Degree">
                            <span asp-validation-for="Degree" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail">Mail</label>
                            <input asp-for="Mail" class="form-control" placeholder="Mail">
                            <span asp-validation-for="Mail" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone">Phone</label>
                            <input asp-for="Phone" class="form-control" placeholder="Phone">
                            <span asp-validation-for="Phone" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Facebook">Facebook</label>
                            <input asp-for="Facebook" class="form-control" placeholder="Facebook">
                            <span asp-validation-for="Facebook" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Instagram">Instagram</label>
                            <input asp-for="Instagram" class="form-control" placeholder="Instagram">
                            <span asp-validation-for="Instagram" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Linkedin">Linkedin</label>
                            <input asp-for="Linkedin" class="form-control" placeholder="Linkedin">
                            <span asp-validation-for="Linkedin" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Twitter">Twitter</label>
                            <input asp-for="Twitter" class="form-control" placeholder="Twitter">
                            <span asp-validation-for="Twitter" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LanguagePercent">Language</label>
                            <input asp-for="LanguagePercent" class="form-control" placeholder="Language">
                            <span asp-validation-for="LanguagePercent" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Leadership">Leadership</label>
                            <input asp-for="Leadership" class="form-control" placeholder="Leadership">
                            <span asp-validation-for="Leadership" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Development">Development</label>
                            <input asp-for="Development" class="form-control" placeholder="Development">
                            <span asp-validation-for="Development" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Communication">Communication</label>
                            <input asp-for="Communication" class="form-control" placeholder="Communication">
                            <span asp-validation-for="Communication" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Innovation">Innovation</label>
                            <input asp-for="Innovation" class="form-control" placeholder="Innovation">
                            <span asp-validation-for="Innovation" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Researching">Researching</label>
                            <input asp-for="Researching" class="form-control" placeholder="Researching">
                            <span asp-validation-for="Researching" style="color:darkred"></span>
                        </div>
                        <p>
                            <img width="400" height="200" src="~/img/teacher/@Model.ImageUrl" alt="" />
                        </p>

                        <div class="form-group">
                            <label asp-for="Photos" for="exampleInputEmail1"></label>
                            <input asp-for="Photos" />
                            <span asp-validation-for="Photos" style="color:darkred"></span>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Submit</button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts{

    @*@await Html.PartialAsync("_ValidationPartial");*@
    <partial name="_ValidationPartial"></partial>

}
