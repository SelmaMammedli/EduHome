@model IEnumerable<Event>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Event Table</h4>
                    <p class="card-description">
                        <a asp-controller="event" asp-action="create" class="btn btn-outline-success">Create Event</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Venue</th>
                                    <th>StartDate</th>
                                    <th>EndDate</th>
                                    <th>Description</th>
                                    <th>Speakers</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var events in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="200" height="100" src="~/img/event/@events.ImageUrl" alt="" />
                                        </td>
                                        <td>@events.Title</td>
                                        <td>@events.Venue</td>
                                        <td>@events.StartDate.ToString("dd MMMM yyyy")</td>
                                        <td>@events.EndDate.ToString("dd MMMM yyyy")</td>
                                        <td>@events.ShortDesc</td>
                                        <td>
                                            <ul>
                                            @foreach(var speaker in events.EventSpeakers)
                                            {
                                                    <li>@speaker.Speaker.FullName</li>
                                                
                                            }
                                            </ul>
                                        </td>
                                        <td>
                                            <a asp-action="update" asp-route-id="@events.Id" class="btn btn-outline-info"><i class="ni ni-ruler-pencil"></i></a>
                                            <a asp-action="delete" asp-route-id="@events.Id" class="btn btn-outline-secondary"><i class="ni ni-fat-remove"></i></a>
                                            <a asp-action="detail" asp-route-id="@events.Id" class="btn btn-outline-behance"><i class="ni ni-settings-gear-65"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>