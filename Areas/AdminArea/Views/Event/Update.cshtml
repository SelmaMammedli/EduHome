@model EventUpdateVM
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Event Update Form</h4>
                    <p class="card-description">
                        <a class="btn btn-outline-dark" asp-action="index">Go Back  </a>
                    </p>
                    <form enctype="multipart/form-data" class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Title">
                            <span asp-validation-for="Title" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Venue">Venue</label>
                            <input asp-for="Venue" class="form-control" placeholder="Venue">
                            <span asp-validation-for="Venue" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate">StartDate</label>
                            <input asp-for="StartDate" class="form-control" placeholder="StartDate">
                            <span asp-validation-for="StartDate" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate">EndDate</label>
                            <input asp-for="EndDate" class="form-control" placeholder="EndDate">
                            <span asp-validation-for="EndDate" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <textarea asp-for="Description" cols="23" rows="9"></textarea>
                            <span asp-validation-for="Description" style="color:darkred"></span>
                        </div>
                        <select asp-for="SpeakerIds" asp-items="ViewBag.Speakers" class="form-select" aria-label="Default select example" multiple>
                           
                        </select><br />
                        @*<select  class="form-select" aria-label="Default select example" multiple>
                        @foreach (var speaker in ViewBag.Speakers)
                        {
                        <input value="@speaker.Id" type="checkbox" />@speaker.FullName<br />

                        }

                        </select><br />*@
                        <p>
                            <img width="400" height="200" src="~/img/event/@Model.ImageUrl" alt="" />
                        </p>
                        <div class="form-group">
                            <label asp-for="Photo"></label>
                            <input asp-for="Photo" />
                            <span asp-validation-for="Photo" style="color:darkred"></span>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Submit</button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts{

    @*@await Html.PartialAsync("_ValidationPartial");*@
    <partial name="_ValidationPartial"></partial>

}
