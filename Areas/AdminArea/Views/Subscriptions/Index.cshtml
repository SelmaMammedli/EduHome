@model IEnumerable<Subscribe>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Subscribe Table</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th> </th>
                                    
                                    <th>Email</th>
                                   
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var subscribe in Model)
                                {
                                    <tr>
                                        <td>@subscribe.Id</td>
                                   
                                        <td>@subscribe.Email</td>
                                       

                                        <td>
                                            <a asp-action="delete" asp-route-id="@subscribe.Id" class="btn btn-outline-secondary"><i class="ni ni-fat-remove"></i></a>
                                            <a asp-action="detail" asp-route-id="@subscribe.Id" class="btn btn-outline-behance"><i class="ni ni-settings-gear-65"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
