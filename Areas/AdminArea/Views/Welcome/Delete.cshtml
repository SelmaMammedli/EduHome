@model Welcome
<hr />
<div class="container ">
    <div class="raw">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <p>
                        <img width="400" height="200" src="~/img/about/@Model.ImageUrl" alt="" />
                    </p>
                    Welcome Title: <i>@Model.Title</i><hr />
                    Welcome Description: <i>@Model.Description</i><hr />
                    Welcome Link:@Model.VideoLink

                    <a class="btn btn-outline-dark" asp-action="index">Go Back  </a>

                    <a class="btn btn-outline-danger" asp-action="DeleteWelcome" asp-route-id="@Model.Id">Delete  </a>
                </div>


            </div>

        </div>

    </div>

</div>
