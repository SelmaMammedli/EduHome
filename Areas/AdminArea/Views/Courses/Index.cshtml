@model IEnumerable<Courses>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Courses Table</h4>
                    <p class="card-description">
                        <a asp-controller="courses" asp-action="create" class="btn btn-outline-success">Create Courses</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>AboutCourse</th>
                                    <th>AboutCourseTitle</th>
                                    <th>HowToApply</th>
                                    <th>HowToApplyTitle</th>
                                    <th>Certification</th>
                                    <th>Start</th>
                                    <th>Duration</th>
                                    <th>ClassDuration</th>
                                    <th>Language</th>
                                    <th>Price</th>
                                    <th>CategoryName</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="200" height="100" src="~/img/course/@course.ImageUrl" alt="" />
                                        </td>
                                        <td>@course.ShortAC</td>
                                        <td>@course.ShortACT</td>
                                        <td>@course.ShortHA</td>
                                        <td>@course.ShortHAT</td>
                                        <td>@course.ShortCerc</td>
                                        <td>@course.Starts.ToString("dd MMMM yyyy")</td>
                                        <td>@course.Duration</td>
                                        <td>@course.ClassDuration</td>
                                        <td>@course.Language.Title</td>
                                        <td>@course.Price</td>
                                        <td>@course.Category.Title</td>
                                        <td>
                                            <a asp-action="update" asp-route-id="@course.Id" class="btn btn-outline-info"><i class="ni ni-ruler-pencil"></i></a>
                                            <a asp-action="delete" asp-route-id="@course.Id" class="btn btn-outline-secondary"><i class="ni ni-fat-remove"></i></a>
                                            <a asp-action="detail" asp-route-id="@course.Id" class="btn btn-outline-behance"><i class="ni ni-settings-gear-65"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

