
@model SpeakerCreateVM
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Speaker Create Form</h4>
                    <p class="card-description">
                        <a class="btn btn-outline-dark" asp-action="index">Go Back  </a>
                    </p>
                    <form enctype="multipart/form-data" class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="exampleInputUsername1">FullName</label>
                            <input asp-for="FullName" class="form-control" placeholder="FullName">
                            <span asp-validation-for="FullName" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Profession</label>
                            <input asp-for="Profession" class="form-control" placeholder="Profession">
                            <span asp-validation-for="Profession" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Degree</label>
                            <input asp-for="Degree" class="form-control" placeholder="Degree">
                            <span asp-validation-for="Degree" style="color:darkred"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1"></label>
                            <input asp-for="Photo" />
                            <span asp-validation-for="Photo" style="color:darkred"></span>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Submit</button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts{

    @*@await Html.PartialAsync("_ValidationPartial");*@
    <partial name="_ValidationPartial"></partial>

}