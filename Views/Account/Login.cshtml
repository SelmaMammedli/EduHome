 @model LoginVM     
 <!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <form  method="post">
                                <input asp-for="UserNameOrEmail" placeholder="Username or Email">
                                <span class="text-danger" asp-validation-for="UserNameOrEmail"></span>
                                <input asp-for="Password"  placeholder="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe"  id="remember">
                                        <label asp-for="RememberMe">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Sign in</button>
                                    <div class="text-center mt-4 font-weight-light">
                                        Doesn't have an account? <a asp-action="register" class="text-primary">Register</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
