<div class="contact-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="contact-contents text-center">
                    @foreach(var locations in Model.Locations)
                    {
                        
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="~/img/contact/@locations.Icon" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>@locations.Title</h3>
                            <p>@locations.Description</p>
                            
                        </div>
                    </div>
                    }
                    
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="reply-area">
                    <h3>LEAVE A message</h3>
                    <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                    <form   method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <p>Name</p>
                                <input asp-for="Name" >
                            </div>
                            <div class="col-md-12">
                                <p>Email</p>
                                <input asp-for="Email" >
                            </div>
                            <div class="col-md-12">
                                <p>Subject</p>
                                <input asp-for="Subject" >
                                <p>Message</p>
                                <textarea asp-for="Message"  cols="15" rows="10"></textarea>
                            </div>
                        </div>
                        @*<a class="reply-btn" data-text="send">*@
                        <button type="submit" class="default-btn">Send message</button>
                        @*<p class="form-messege"></p>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
