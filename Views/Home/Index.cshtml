<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var blog in Model.Blogs)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a asp-action="BlogDetails" asp-route-id="@blog.Id"><img src="~/img/blog/@blog.ImageUrl" alt="blog"></a>
                            <div class="blog-hover">
                                <a asp-action="BlogDetails" asp-route-id="@blog.Id"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By @blog.Author  /  @blog.CreatedDate.ToString("dd MMMM yyyy")   </p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a asp-action="BlogDetails" asp-route-id="@blog.Id">@blog.ShortTitle </a></h2>
                                <a asp-action="BlogDetails" asp-route-id="@blog.Id">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
       
        </div>
    </div>
</div>
<!-- Blog Area End -->
