@using EduHome.Models;

@model BlogVM      
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img width="700" height="800" src="~/img/blog/@Model.Blog.ImageUrl" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Blog.Title </h2>
                        <h6>By @Model.Blog.Author  /  @Model.Blog.CreatedDate.ToString("dd MMMM yyyy")  </h6>
                        <p>@Model.Blog.Description  </p>
                        <p> @Model.Blog.Description</p>
                        
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form  asp-action="contact" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input asp-for="@Model.ContactVM.Name" type="text"  id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input asp-for="@Model.ContactVM.Email" type="text" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input asp-for="@Model.ContactVM.Subject" type="text" id="subject">
                                    <p>Massage</p>
                                    <textarea asp-for="@Model.ContactVM.Message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <button class="default-btn type="submit"><span>send message</span></button>
                            @*<a class="reply-btn"  data-text="send"><span>send message</span></a>*@
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-47">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-47">
                        <h3>categories</h3>
                        <ul>
                            @foreach(var category in Model.Categories)
                            {
                                <li><a asp-action="courses">@category.Title</a></li>
                            }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-47">
                        <div class="single-blog-banner">
                            <a asp-action="about" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-47">
                        <h3>latest post</h3>
                        @foreach(var blog in Model.Blogs)
                        {
                            
                        <div class="single-post mb-30">
                            <div class="single-post-img">
                                <a href="blog-details.html">
                                        <a asp-action="BlogDetails" asp-route-id="@blog.Id"><img width="100" height="100" src="~/img/blog/@blog.ImageUrl" alt="post"></a>
                                    
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="single-post-content">
                                <h4><a >@blog.Title</a></h4>
                                    <p>By @blog.Author  /  @blog.CreatedDate.ToString("dd MMMM yyyy")</p>
                            </div>
                        </div>
                        }
                       
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach(var tag in Model.Tags)
                            {
                                
                                <a asp-action="@tag.Title" class="mr-10 mb-10">@tag.Title</a>
                            }
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
