@model HomeVM       
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach(var teacher in Model.Teachers)
            {
                
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher mb-45">
                    <div class="single-teacher-img">
                        <a asp-action="TeacherDetails" asp-route-id="@teacher.Id"><img src="~/img/teacher/@teacher.ImageUrl" alt="teacher"></a>
                    </div>
                    <div class="single-teacher-content text-center">
                            <h2><a asp-action="TeacherDetails" asp-route-id="@teacher.Id">@teacher.FullName</a></h2>
                        <h4>@teacher.License.Title</h4>
                        <ul>
                            <li><a href="@teacher.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                            <li><a href="@teacher.Instagram"><i class="zmdi zmdi-instagram"></i></a></li>
                            <li><a href="@teacher.Linkedin"><i class="zmdi zmdi-linkedin"></i></a></li>
                            <li><a href="@teacher.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            }
          
        </div>
    </div>
</div>
<!-- Teacher End -->
