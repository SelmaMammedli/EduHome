@model HomeVM    
<!-- Banner Area Start -->

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Model.Welcome.Title <span> EDUHOME</span></h2>
                    <p>@Model.Welcome.Description</p>
                    
                    <a class="default-btn" asp-action="courses" >view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@Model.Welcome.ImageUrl" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var teacher in Model.Teachers)
            {
                
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher">
                    <div class="single-teacher-img">
                            <a asp-action="TeacherDetails" asp-route-id="@teacher.Id"><img src="~/img/teacher/@teacher.ImageUrl" alt="teacher"></a>
                    </div>
                    <div class="single-teacher-content text-center">
                            <h2><a asp-action="TeacherDetails" asp-route-id="@teacher.Id">@teacher.FullName</a></h2>
                        <h4>@teacher.License.Title</h4>
                        <ul>
                                <li><a href="@teacher.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teacher.Instagram"><i class="zmdi zmdi-instagram"></i></a></li>
                                <li><a href="@teacher.Linkedin"><i class="zmdi zmdi-linkedin"></i></a></li>
                                <li><a href="@teacher.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            }
          
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                @foreach(var stu in Model.Students)
                {
                    
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                <img src="~/img/teacher/@stu.ImageUrl" alt="testimonial">
                            </div>
                            <div class="testimonial-content">
                                <p> @stu.About</p>
                                <h4>@stu.FullName</h4>
                                <h5>Student, @stu.Category.Title</h5>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@Model.Welcome.VideoLink">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach(var notice in Model.NoticeBoards)
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@notice.Time.ToString("dd MMMM yyyy")</h4>
                                <p>@notice.Description </p>
                            </div>
                        }
                        
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
